<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ToggleGroup?>

<VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="768.0" prefWidth="1024.0"
      styleClass="dashboard" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="presentation.dashboard.DashboardController">
    <HBox alignment="CENTER" maxWidth="920">
        <VBox.margin>
            <Insets bottom="20.0" top="20.0"/>
        </VBox.margin>
        <Label styleClass="dashboard__user" text="Signed in as "/>
        <MenuButton fx:id="userButton" mnemonicParsing="false"
                    styleClass="button, button-secondary, dashboard__user-button" text="Username">
            <items>
                <fx:define>
                    <ToggleGroup fx:id="difficultyToggleGroup"/>
                </fx:define>
                <Menu fx:id="difficultySettingMenu" mnemonicParsing="false" text="Difficulty setting"/>
                <MenuItem mnemonicParsing="false" onAction="#handleSignOut" text="Sign out"/>
            </items>
        </MenuButton>
        <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
            <Label alignment="TOP_LEFT" contentDisplay="CENTER" styleClass="dashboard__title" text="Quizzes"
                   textAlignment="CENTER"/>
        </HBox>
        <Label fx:id="titleQuizCountLabel" alignment="CENTER_RIGHT" styleClass="dashboard__title_quiz-count"
               textAlignment="RIGHT">
            <HBox.margin>
                <Insets/>
            </HBox.margin>
        </Label>
    </HBox>
    <HBox alignment="CENTER">
        <ScrollPane hbarPolicy="NEVER" styleClass="dashboard__scroll-container">
            <VBox fx:id="quizzesContainer" styleClass="dashboard__quizzes"/>
        </ScrollPane>
    </HBox>
    <stylesheets>
        <URL value="@../shared/shared.css"/>
        <URL value="@dashboard.css"/>
    </stylesheets>
</VBox>
